<!DOCTYPE HTML>
<html>
<head>
  <title><%= @pagetitle %></title>
  <%= csrf_meta_tag %>
  <%= stylesheet_link_tag "omnipresent_main", :media => "all" %>
  <%= javascript_include_tag "scroller" %>
</head>
<BODY onLoad="start()">
<div align="center">


<div id="Container"> 
  <div id="Header"></div>

  	<div id="MainNav">
		<ul>
			<li><%= link_to I18n.t('layout.mainnav.home'), root_path -%></li>
			<li><%= link_to I18n.t('layout.mainnav.about'), about_path %></li>
			<li><%= link_to I18n.t('layout.mainnav.join'), join_path  %></li>
			<li><%= link_to I18n.t('layout.mainnav.contact'), contact_path %></li>
			<li><%= link_to I18n.t('layout.mainnav.members_login'), '#'  %></li>
		</ul>
	</div>
  <div id="MainColumn"> 
   <div id="main">
	  <%= yield :layout %>
	</div>
  </div>
  <!--  Close MainColumn div  -->
  <div id="Menu"> 
    <div id="Navigation"> 
 		  <p class="HomeNavigation"><%= link_to I18n.t('layout.menu.home'), root_path -%></p><br /><br />

		<p class="MainNavigation">
		  	<%= link_to I18n.t('layout.menu.member_orchestras'), member_orchestras_path %>
			<%= link_to I18n.t('layout.menu.endorsements'),  endorsements_path %>
			<%= link_to I18n.t('layout.menu.free_trial'), free_trial_path %>
			<%= link_to I18n.t('layout.menu.subscription_rates'), subscription_rates_path %>
			<%= link_to I18n.t('layout.menu.links'), links_path %>
		    
		</p>
		
		<%= form_tag ' ', :method => 'GET', :class => 'locale' do %>
		  <%= select_tag 'locale', options_for_select(LANGUAGES, I18n.locale.to_s), :onchange => 'this.form.submit()' %>
		  
		  <%= javascript_tag "$$('.locale input').each(Element.hide)" %>
		<% end %>

    </div>
    <!--  Close Navigation div  -->
 
  </div>
  <!--  Close LeftBar div  -->
</div>
<!--  Close Container div  -->
<div id="Footer"><ul>
<li><%= link_to 'Terms & Conditions', terms_path %></li>
<li><%= link_to 'Privacy Policy', privacy_policy_path %></li>
<li>&copy; Copyright 2004-2011 Ed Cervenka</li>
</ul></div>
<!--  Close FooterBanner div  -->
<%= debug(params) if Rails.env.development? %>
</body>
</html>

