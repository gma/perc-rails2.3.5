<!DOCTYPE HTML>
<html>
<head>
  <title><%= @title %></title>
  <%= csrf_meta_tag %>
  <%= stylesheet_link_tag "omnipresent_main", :media => "all" %>
  <%= javascript_include_tag "scroller" %>
</head>
<BODY onLoad="start()">
<div align="center">


<div id="Container"> 
  <div id="Header"></div>

<%= render 'layouts/mainnav' %>
	
  <div id="MainColumn"> 
   <div id="main">
	<% if flash[:message] %>
	<h1><%= flash[:message] %></h1>
	<% end %>
	<% if flash[:notice] %>
	<p><%= flash[:notice] %></p>
	<% end %>
	<% if flash[:error] %>
	<p><%= flash.now[:error] %></p>
	<% end %>
	
	  <%= yield :layout %>
	</div>
  </div>
  <!--  Close MainColumn div  -->
  <div id="Menu"> 
    <div id="Navigation"> 
 		  <p class="HomeNavigation"><%= link_to I18n.t('layout.menu.home'), root_path -%></p><br /><br />

			<% if signed_in? && current_user.active_member? %>
        <p class="MainNavigation">
        <%= link_to I18n.t('layout.menu.write_endorsement'), new_endorsement_path  %>
        <%= link_to I18n.t('layout.menu.request'), new_work_request_path %>
        <%= link_to I18n.t('layout.menu.add'), '#' %>
        </p>
        <br /><br />
        <p class="MainNavigation">
        <%= link_to I18n.t('layout.menu.instrument_translations'), instrument_translations_path %>
        <%= link_to I18n.t('layout.menu.searches'), '#' %>
        <%= link_to I18n.t('layout.menu.gig'), '#' %>
        <%= link_to I18n.t('layout.menu.schedule'), '#' %>
        <%= link_to I18n.t('layout.menu.planner'), '#' %>
        </p>
      <% end %>

      <% if (! signed_in?) || (! current_user.active_member?) %>
        <p class="MainNavigation">
        <%= link_to I18n.t('layout.menu.member_orchestras'), member_orchestras_path %>
        <%= link_to I18n.t('layout.menu.endorsements'),  endorsements_path %>
        <%= link_to I18n.t('layout.menu.free_trial'), free_trial_path %>
        <%= link_to I18n.t('layout.menu.subscription_rates'), subscription_rates_path %>
        <%= link_to I18n.t('layout.menu.links'), links_path %>
        <%= link_to 'Preview', composers_path(:letter => 'A') %>
        </p>
      <% end %>

			<% if signed_in? %>
        <p class="MainNavigation">
        <br /><br />
        <%= link_to I18n.t('layout.menu.account'), '#' %>	 
        </p>
      <% end %>
		
		<%= form_tag ' ', :method => 'GET', :class => 'locale' do %>
		  <%= select_tag 'locale', options_for_select(LANGUAGES, I18n.locale.to_s), :onchange => 'this.form.submit()' %>
		  
		  <%= javascript_tag "$$('.locale input').each(Element.hide)" %>
		<% end %>

    </div>
    <!--  Close Navigation div  -->
 
  </div>
  <!--  Close LeftBar div  -->
</div>
<!--  Close Container div  -->
<%= render 'layouts/footer' %>
<!--  Close FooterBanner div  -->
<%= debug(params) if Rails.env.development? %>
</body>
</html>

